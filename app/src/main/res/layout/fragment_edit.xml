<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/pad_edit">

    <TextView
        android:id="@+id/tv_food_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        android:text="Edit Menu"
        android:textColor="@color/black"
        android:textSize="@dimen/judul_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Menu : "
            android:textSize="@dimen/menu_size"
            android:padding="@dimen/pad_info"
            android:layout_weight="4"/>

        <EditText
            android:id="@+id/edit_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/des"
            android:paddingLeft="@dimen/pad_info"
            android:hint="Tuliskan menu"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/des"
        android:padding="@dimen/pad_info"
        android:text="@string/des"/>

    <EditText
        android:id="@+id/edit_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/des"
        android:inputType="textMultiLine"
        android:paddingLeft="@dimen/pad_info"
        android:hint="Tuliskan deskripsi"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/des"
            android:padding="@dimen/pad_info"
            android:text="@string/tag"
            android:layout_weight="5"/>

        <EditText
            android:id="@+id/edit_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/des"
            android:paddingLeft="@dimen/pad_info"
            android:hint="Tuliskan tag"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/des"
        android:padding="@dimen/pad_info"
        android:text="@string/bahan"/>

    <EditText
        android:id="@+id/edit_bahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/des"
        android:inputType="textMultiLine"
        android:paddingLeft="@dimen/pad_info"
        android:hint="Tuliskan bahan-bahan"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/des"
        android:padding="@dimen/pad_info"
        android:text="@string/langkah"/>

    <EditText
        android:id="@+id/edit_langkah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/des"
        android:inputType="textMultiLine"
        android:hint="Tuliskan langkah memasak"
        android:paddingLeft="@dimen/pad_info"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/des"
        android:padding="@dimen/pad_info"
        android:text="@string/lokasi"/>

    <EditText
        android:id="@+id/edit_lokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="Tulisan alamat"
        android:paddingLeft="@dimen/pad_info"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/pad_info"
            android:id="@+id/btn_save"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Save"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>
</LinearLayout>
</ScrollView>